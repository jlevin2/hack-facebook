{
    "name": "Content Analysis",
    "version": "0.1",
    "description": "Analyses content for trigger warnings and user sentiment analysis",
    "permissions": ["declarativeContent", "storage", "activeTab"],
    "background": {
        "scripts": ["background/trigger-warning-reddit.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://twitter.com/*", "https://twitter.com/*"],
            "run_at": "document_idle",
            "js": ["content/jquery.js", "content/hideTriggers.js"]
        },
        {
            "matches": ["http://*twitter.com/*", "https://*.twitter.com/*"],
            "run_at": "document_idle",
            "js": ["content/jquery.js", "content/hideTriggers.js"]
        }
    ],
    "page_action": {
        "default_popup": "menu/menu.html",
        "default_icon": "images/icon.png"
    },
    "manifest_version": 2
}
